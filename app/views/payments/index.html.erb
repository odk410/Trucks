<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Imp uid</th>
      <th>Pg provider</th>
      <th>Amount</th>
      <th>Name</th>
      <th>Pay method</th>
      <th>Status</th>
      <th>Merchant uid</th>
      <th>User</th>
      <th>Cancel reason</th>
      <th>Cancelled at</th>
      <th>Cancel amount</th>
      <th>Paid at</th>
      <th>Fail reason</th>
      <th>Failed at</th>
      <th>Pg tid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.imp_uid %></td>
        <td><%= payment.pg_provider %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.name %></td>
        <td><%= payment.pay_method %></td>
        <td><%= payment.status %></td>
        <td><%= payment.merchant_uid %></td>
        <td><%= payment.user %></td>
        <td><%= payment.cancel_reason %></td>
        <td><%= payment.cancelled_at %></td>
        <td><%= payment.cancel_amount %></td>
        <td><%= payment.paid_at %></td>
        <td><%= payment.fail_reason %></td>
        <td><%= payment.failed_at %></td>
        <td><%= payment.pg_tid %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>

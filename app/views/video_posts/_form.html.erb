
<%= simple_form_for(@video_post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, as: :summernote %>
    <% if !@video_post.video_url.present? %>
      <%= f.file_field :video %>
      <%= f.input :video_location, as: :radio_buttons, collection: [['위','0'], ['아래','1']], checked: [0, true] %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

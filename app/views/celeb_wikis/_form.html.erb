
<%= simple_form_for(@celeb_wiki) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<% if user_signed_in? %>
  <div class="form-inputs">
    <%= f.input :user_id, :as => :hidden, input_html: {value: current_user.id, readonly: true} %>
    셀럽: <%= @celeb.name %>
    <%= f.input :celebrity_id, :as => :hidden, input_html: { value: @celeb.id, readonly: true,  } %>
    <%= f.input :content, as: :summernote %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% elsif %>
  <div>
    <strong>로그인 후 이용해주세요.<strong>
  </div>
<% end %>
<% end %>

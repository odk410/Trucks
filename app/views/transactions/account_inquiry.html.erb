<%= @account.acc_num %> 의 거래정보

<table>
  <thead>
    <tr>
      <th>To</th>
      <th>보냄</th>
      <th>받음</th>
      <th>금액<th>
    </tr>
  </thead>

  <tbody>
    <% @trx.each do |t| %>
      <tr>
        <td><%= t.target %></td>
        <td><%= t.remit == true ? 'O' : 'X' %></td>
        <td><%= t.receive == true ? 'O' : 'X' %></td>
        <td><%= t.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
